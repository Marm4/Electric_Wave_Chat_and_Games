<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
        </shape>
    </item>

    <item android:top="-10dp" android:right="-10dp" android:left="-10dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary"/>
            <stroke
                android:width="1dp"
                android:color="@color/secondaryTransparency" />
        </shape>
    </item>
</layer-list>