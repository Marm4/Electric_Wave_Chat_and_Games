<?xml version="1.0" encoding="utf-8"?>
<resources>

    //General

    <style name="TextBoldStyle">
        <item name="android:fontFamily">@font/sf_bold</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRegularStyle">
        <item name="android:fontFamily">@font/sf_regular</item>
        <item name="android:textColor">@color/secondary</item>
    </style>


    //LogIn and SingUp
    <style name="HeaderStyle">
        <item name="android:fontFamily">@font/dong_pora</item>
        <item name="android:textSize">45dp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="TextBoldLogIn" parent="TextRegularStyle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextRegularLogIn" parent="TextRegularStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColorHint">@color/secondary</item>
    </style>

    //Search
    <style name="TextBoldSearch" parent="TextBoldStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRegularSearch" parent="TextRegularStyle">
        <item name="android:textSize">15sp</item>
    </style>



</resources>